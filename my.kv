<Button>:
    font_size: 20

<Calc>:
    orientation: 'vertical'
    padding: 2
    spacing: 1
    output: output

    Label: #OUTPUT
        id: output
        text: '0'
        font_size: 60
        text_size: self.size
        halign: 'right'
        valign: 'middle'
        padding_x: 10
        max_lines: 1

    BoxLayout: #LINHA 1

        Button:
            text: 'C'
            size_hint_x: 2
            on_release: output.text = '0'

        Button:
            text: '<-'
            on_release: root.apagar()

        Button:
            text: '/'
            on_release: root.clicarBotao(self.text)

    BoxLayout: #LINHA 2

        Button:
            text: '7'
            on_release: root.clicarBotao(self.text)

        Button:
            text: '8'
            on_release: root.clicarBotao(self.text)

        Button:
            text: '9'
            on_release: root.clicarBotao(self.text)

        Button:
            text: '*'
            on_release: root.clicarBotao(self.text)

    BoxLayout: #LINHA 3

        Button:
            text: '4'
            on_release: root.clicarBotao(self.text)

        Button:
            text: '5'
            on_release: root.clicarBotao(self.text)

        Button:
            text: '6'
            on_release: root.clicarBotao(self.text)

        Button:
            text: '-'
            on_release: root.clicarBotao(self.text)

    BoxLayout: #LINHA 4

        Button:
            text: '1'
            on_release: root.clicarBotao(self.text)

        Button:
            text: '2'
            on_release: root.clicarBotao(self.text)

        Button:
            text: '3'
            on_release: root.clicarBotao(self.text)

        Button:
            text: '+'
            on_release: root.clicarBotao(self.text)

    BoxLayout: #LINHA 5

        Button:
            text: '.'
            on_release: root.clicarBotao(self.text)

        Button:
            text: '0'
            on_release: root.clicarBotao(self.text)

        Button:
            text: '='
            size_hint_x: 2
            on_release: root.resultado()
